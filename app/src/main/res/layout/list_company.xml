<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="16dp"
    android:id="@+id/vists"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:clickable="true"

    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:padding="16dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight=".7"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/name_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="Name Company"/>

            <TextView
                android:id="@+id/addres_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fullname_text"
                android:layout_marginBottom="8dp"
                android:textSize="16sp"
                android:text="Direccion"/>

            <TextView
                android:id="@+id/phone_company"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fullname_text"
                android:layout_marginBottom="8dp"
                android:textSize="16sp"
                android:text="Telefono"/>


        </LinearLayout>


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_weight=".3"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/logo_company"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_company" />


        </LinearLayout>


    </LinearLayout>



</android.support.v7.widget.CardView>